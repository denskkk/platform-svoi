# ===========================================
# PRODUCTION ENVIRONMENT VARIABLES
# ===========================================
# Скопируйте этот файл в .env на сервере
# и заполните реальными значениями

# Окружение (обязательно production на сервере)
NODE_ENV=production

# URL вашего сайта (без слэша в конце)
NEXT_PUBLIC_SITE_URL=https://sviydlyasvoih.com.ua

# JWT секрет для токенов авторизации
# Сгенерируйте командой: openssl rand -base64 32
JWT_SECRET=ЗАМЕНИТЕ_НА_СЛУЧАЙНУЮ_СТРОКУ_МИНИМУМ_32_СИМВОЛА

# База данных PostgreSQL
# Формат: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL="postgresql://sviy:ВАШ_ПАРОЛЬ@localhost:5432/sviydlyasvoyikh?schema=public"

# Порт приложения (по умолчанию 3000)
# Nginx будет проксировать на этот порт
PORT=3000

# ===========================================
# ОПЦИОНАЛЬНЫЕ НАСТРОЙКИ
# ===========================================

# Email настройки (если планируете отправку писем)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# SMTP_FROM=noreply@sviydlyasvoih.com.ua

# Cloudflare Turnstile (альтернатива reCAPTCHA)
# NEXT_PUBLIC_TURNSTILE_SITE_KEY=
# TURNSTILE_SECRET_KEY=

# Аналитика
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
# NEXT_PUBLIC_YANDEX_METRIKA_ID=

# Логи (для production рекомендуется error или warn)
# LOG_LEVEL=error
